<style amp-custom='amp-custom'>
/* All */
* {box-sizing: border-box;}
body {font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, sans-serif; font-weight: 400; font-size: 16px; line-height: 1.5;}
a {color: #3b5b28; text-decoration: none;}
a:hover {text-decoration: underline;}
.wrapper {margin: 0 auto; max-width: 748px;}

/* Header */
.header .logo {display: block; width: 300px; height: 27px; margin: 40px auto; padding: 10px; background-image: url(&#39;https://2.bp.blogspot.com/-9leD4YSC7UE/WwGGNXAu3pI/AAAAAAAAC4c/9ZiDsI6lPVIPkMyh1IqHpAbF9mQPRnDXwCPcBGAYYCw/s1600/un-salarie-riche-logo.png&#39;);}

/* Post */
.content .post {padding: 0 10px;}
.content .post h1 {color: #282c34; margin: 40px 0; font-size: 40px; line-height: 45px; font-weight: 700;}
.content .post h2 {font-size: 20px; border-top: 1px solid #ececec; margin-top: 44px; padding-top: 40px; line-height: 1.2;}
.content .post amp-img {margin: 20px 0 40px;}
.content .post .labels {margin: 40px 0;}
.content .share-buttons, .content .comments {padding: 0 2px;}
.content .comments {margin: 20px 0 40px;}

/* Footer */
.footer {padding: 0 10px 20px;}
.footer .popular-posts, .footer .recents-posts {margin: 40px 0; width: 100%;}
.footer .items {padding: 0; list-style: none;}
.footer .item {border-top: 1px solid #ececec;}
.footer .item h2 {color: #282c34;}
.footer .item a {display: block; padding: 10px 0; text-decoration: none; font-size: 12px; color: #999; text-transform: uppercase;}
.footer .item a:hover {color: #3b5b28; text-decoration: none;}
.footer .copyright {width: 100%; font-size: 12px; text-align: center;}

/* AdSense */
.adsense amp-ad {margin: 0 auto;}
.header .adsense amp-ad {width: 320px; height: 50px;}
.content .adsense amp-ad, .footer .adsense amp-ad {width: 300px; height: 250px;}

/* Desktop */
@media screen and (min-width: 748px) {
  /* Post */
  .content .post h1 {font-size: 60px; line-height: 65px;}
  .content .post h2 {font-size: 35px;}

  /* Footer */
  .footer {display: -ms-flexbox; display: -webkit-flex; display: flex; -webkit-flex-wrap: wrap; -ms-flex-wrap: wrap; flex-wrap: wrap; -webkit-justify-content: space-between; -ms-flex-pack: justify; justify-content: space-between;}
  .footer .popular-posts, .footer .recents-posts {-webkit-flex: 1 1 auto; -ms-flex: 1 1 auto; flex: 1 1 auto; width: 50%;}
  .footer .popular-posts {-webkit-order: 1; -ms-flex-order: 1; order: 1; padding-right: 20px; border-right: 1px solid #ececec;}
  .footer .recents-posts {-webkit-order: 2; -ms-flex-order: 2; order: 2; padding-left: 20px;}
  .footer .copyright {-webkit-order: 3; -ms-flex-order: 3; order: 3;}

  /* AdSense */
  .header .adsense amp-ad, .content .adsense amp-ad, .footer .adsense amp-ad {width: 728px; height: 90px;}
}
